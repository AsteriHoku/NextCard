@model Card

<!DOCTYPE html>
<html>
<head>
    <style>
/*        $color: Color array: D4F0F0, 8FCACA, CCE2CB, B6CFB6, 97C1A9*/
        .navbar {
            background-color: black;
            overflow: hidden;
        }

            .navbar a {
                float: left;
                color: white;
                text-align: center;
                padding: 14px 16px;
                text-decoration: none;
                font-family: 'Noto Sans KR', sans-serif;
                font-size: 17px;
            }

        hr {
            display: block;
            border: none;
            height: 20px;
            background-color: lightblue;
            margin: 10px;
        }

        p {
            margin: 10px 0px 10px 0px;
            font-family: 'Noto Sans KR', sans-serif;
            font-weight: 100;
            letter-spacing: -0.25px;
            line-height: 1.25;
            font-size: 16px;
            word-break: break-all;
            word-wrap: pre-wrap;
            color: black;
        }

        body {
            background-color: lightblue;
        }

        /*        .container {
                            width: 80%;
                            min-height: 100vh;
                            display: flex;
                            -ms-flex-wrap: wrap;
                            flex-wrap: wrap;
                            margin-left: auto;
                            margin-right: auto;
                        }*/

        .center {
            align-items: center;
            justify-content: center;
            padding: 20px;
            min-height: 100vh;
            width: 50%;
        }

        .col-12 {
            padding: 20px;
        }

        .card {
            background-color: white;
            text-align: center;
            width: 100%;
            display: -ms-flexbox;
            display: flex;
            -ms-flex-direction: column;
            flex-direction: column;
            padding: 20px;
            margin: 5px;
            box-shadow: -20px -20px 0px 0px;
            border-radius: 10px;
        }

        button {
            background-color: lightblue;
            width: 50%;
            margin: 10px auto;
            padding: 10px 30px;
            color: black;
            font-family: 'Noto Sans KR', sans-serif;
            text-transform: uppercase;
            border-style: dashed;
            border-color: darken(lightblue, 50%);
            border-radius: 10px;
        }
    </style>
</head>
<body>
    <div class="col-12">
    <div class="center">
        <div class="card">
            <h1>@Model.Title</h1>
            <hr />
